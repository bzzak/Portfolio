<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="labelTitle" layoutX="50.0" prefHeight="75.0" prefWidth="750.0" text="%main.title" textAlignment="CENTER" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
         <font>
            <Font size="50.0" />
         </font>
      </Label>
      <Label fx:id="labelGameLevel" layoutX="25.0" layoutY="204.0" text="%level.label" AnchorPane.leftAnchor="25.0">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <ComboBox fx:id="levelComboBox" layoutX="232.0" layoutY="210.0" prefWidth="150.0" promptText="%level.default" />
      <Button fx:id="gameStartButton" layoutX="664.0" layoutY="713.0" mnemonicParsing="false" text="%start.button" AnchorPane.bottomAnchor="25.0" AnchorPane.rightAnchor="25.0">
         <font>
            <Font size="25.0" />
         </font>
      </Button>
      <HBox alignment="CENTER" layoutX="25.0" layoutY="573.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="50.0">
         <children>
            <ToggleButton fx:id="english" mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0">
               <toggleGroup>
                  <ToggleGroup fx:id="language" />
               </toggleGroup>
            </ToggleButton>
            <ToggleButton fx:id="polish" mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0" selected="true" toggleGroup="$language" />
         </children>
      </HBox>
      <Button fx:id="loadButton" layoutX="204.0" layoutY="624.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="220.0" text="%load.button" AnchorPane.bottomAnchor="24.0">
         <font>
            <Font size="25.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
